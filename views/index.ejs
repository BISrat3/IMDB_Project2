<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head.ejs') %>
<body>
    <%- include('partials/nav.ejs') %>  
    <h1>Movie Home Page </h1>
    <form method="POST" action="/movies/s">
        <div>
            <label for="search">Search:</label>
            <input type="text" name="search" id="">
        </div>
        <input type="submit" id="" value="Search">
    </form>
    <br />
    <div>
        <a href="users/signin"><button class="singinBtn">Signin</button></a>
    </div>
    <div>
        <% for(let i=0; i<movies.length; i++){ %>
            <% const movie = movies[i] %>
            <div>
                <h2><a href="/movies/<%=movie._id%>"><%=movie.title%></a></h2>
                <p><%=movie.releaseDate%></p>
                <img class="index pic" src="<%=movie.image%>" alt="<%=movie.title%>">
            </div>
        <% } %>
    </div>
</body>
</html>